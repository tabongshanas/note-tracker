mixin userDetail(labelText, placeholder, type, inputName, inputClass)
    label= labelText
        if (type == 'password')
            p.detail-content= placeholder
        //- this is the problem why log in is not working
        else if (inputName == 'gender')
            select#select(name='gender' class=inputName)
                option(value='') Gender  
                option(value='male') Male  
                option(value='female') Female  
        else if (type !== 'password' || inputName !== 'gender')
            //- input(type=`${type}` placeholder=`${placeholder}` name=`${name}` class=`${class}`).detail-content
            input(type=type placeholder=placeholder name=inputName class=inputClass).detail-content
